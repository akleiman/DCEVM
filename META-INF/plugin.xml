<idea-plugin version="2">
  <id>dcevm</id>
  <name>DCEVM integration</name>
  <version>1.0</version>
  <vendor email="lepenkiny@gmail.com">Yaroslav Lepenkin</vendor>

  <description><![CDATA[
      Provides integration with <a href="http://ssw.jku.at/dcevm/">DCEVM</a><br/>
      (enhanced JVM with ability to perform 'true hotswap')
      ]]></description>

  <change-notes><![CDATA[
      initial
      ]]>
  </change-notes>

  <idea-version since-build="129.524"/>

  <extensions defaultExtensionNs="com.intellij">
    <postStartupActivity implementation="ru.spbau.launch.DcevmStartup"/>
    
    <jreProvider implementation="ru.spbau.launch.util.RunConfigurationManipulator"/>

    <applicationService serviceInterface="ru.spbau.launch.util.JreStateProvider" serviceImplementation="ru.spbau.launch.util.JreStateProviderImpl">
    </applicationService>
    <applicationService serviceInterface="ru.spbau.install.download.util.HttpDownloader" serviceImplementation="ru.spbau.install.download.util.HttpDownloader">
    </applicationService>
    <applicationService serviceInterface="ru.spbau.install.info.InfoProvider" serviceImplementation="ru.spbau.install.info.InfoProviderImpl">
    </applicationService>
    <applicationService serviceInterface="ru.spbau.install.download.JreDownloader" serviceImplementation="ru.spbau.install.download.JreDownloader">
    </applicationService>
    <applicationService serviceInterface="ru.spbau.launch.util.RunConfigurationManipulator" serviceImplementation="ru.spbau.launch.util.RunConfigurationManipulator">
    </applicationService>
    <applicationService serviceInterface="ru.spbau.install.download.DownloadManager" serviceImplementation="ru.spbau.install.download.DownloadManager">
    </applicationService>
    <applicationService serviceInterface="ru.spbau.install.info.specific.JreUrlsProvider" serviceImplementation="ru.spbau.install.info.specific.JreUrlsProviderImpl">
    </applicationService>

  </extensions>

</idea-plugin>